{
    "parser": "babel-eslint",
    "plugins": [
        "import",
        "react",
        "jsx-a11y",
        "jest",
        "cypress",
        "chai-friendly"
    ],
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended"
    ],
    "rules": {
        "max-len": [
            1,
            120,
            2,
            {
                "ignoreComments": true
            }
        ],
        "prop-types": 2
    },
    "globals": {
        "module": true
    },
    "env": {
        "node": true,
        "browser": true,
        "jasmine": true,
        "jest": true,
        "cypress/globals": true
    }
}