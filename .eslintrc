{
    "parser": "babel-eslint",
    "plugins": [
        "flowtype",
        "import",
        "react",
        "jsx-a11y",
        "jest",
        "cypress",
        "chai-friendly"
    ],
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended",
        "plugin:flowtype/recommended"
    ],
    "rules": {
        "max-len": [
            1,
            220,
            2,
            {
                "ignoreComments": true
            }
        ],
        "import/no-extraneous-dependencies": "off",
        "no-unused-vars": "off",
        "prop-types": "off",
        "func-names": "off",
        "import/no-unresolved": "off",
        "import/extensions": "off"
    },
    "globals": {
        "module": true
    },
    "env": {
        "node": true,
        "browser": true,
        "jasmine": true,
        "jest": true,
        "cypress/globals": true
    },
    "settings": {
        "flowtype": {
            "onlyFilesWithFlowAnnotation": true
        },
        "import/resolver": "webpack"
    }
}
